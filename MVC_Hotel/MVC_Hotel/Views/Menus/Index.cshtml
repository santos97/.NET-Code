@model IEnumerable<MVC_Hotel.Models.Menu>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cusine_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cusine_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cusine_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cusine_Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "MenuEdit", new { id=item.ID }) |*@
            <button id="edit" onclick="EditPopUp(@item.ID)" class="btn btn-primary">Edit</button> |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>

@*<div id="#dvMenuEdit">

</div>*@



<div  class="modal">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div id="dvMenuEdit" class="modal-body">
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script>
    function EditPopUp(id) {
        $.ajax({
            url: '/Menus/MenuEdit?id=' + id,
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (res) {
                alert("sucess");
                debugger;
                $(".modal").show();
                $('#dvMenuEdit').html(res);
            },
            error: function(){
                alert("rror");
            }
                
        })

    }


</script>